/var/log/quagga/*.log {
	su quagga quagga
	daily
	sharedscripts
	missingok
	compress
	rotate 14
	create 640 quagga quagga

	postrotate
		for i in zebra bgpd ripd ospfd ripngd ospf6d isisd; do
			if [ -e /var/run/quagga/$i.pid ] ; then
				kill -USR1 $(cat /var/run/quagga/$i.pid)
			fi

		done
	endscript
}
